@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-Category="" asp-route-pageNum ="1" class="btn-block btn-light">Home</a>
    
    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-Category="@t" asp-route-pageNum ="1"
           class="btn-block btn-light @(ViewBag.Selected == t ? "btn-primary" : "btn-secondary")">@t</a>
        
    }

</div>